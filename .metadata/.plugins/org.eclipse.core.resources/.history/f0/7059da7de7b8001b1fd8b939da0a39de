package com.qa.starterworld;

public class splitAndAdd {

	public static int number = 88923;
	public static int total = 0;
	public static void main(String[] args) {
		splitAndAdd(number);
	}

	public static void splitAndAdd(int a) {
		while (a > 0) {
			int add = a % 10;
			total = total + add;
			
			a = a / 10;
		}
		
		System.out.println("the first digit plus the second digit equals: " + total);
	};
	
}
